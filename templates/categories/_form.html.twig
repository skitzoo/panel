{{ form_start(form) }}
<div class="form-group row">
    {{ form_label(form.name, '', {'label_attr': {'class': 'col-form-label col-sm-3'}}) }}
    <div class="col-sm-9">
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        <small class="form-text text-muted">{{ form_errors(form.name) }}</small>
    </div>
</div>

<div class="form-group row">
    {{ form_label(form.image2, '', {'label_attr': {'class': 'col-form-label col-sm-3 custom-file'}}) }}
    {{ form_errors(form.image2) }}
    <div class="col-sm-9">
        {{ form_widget(form.image2, {'attr': {'class': 'form-control form-control-file'}}) }}
        <span class="custom-file-control"></span>
    </div>
</div>

<div class="form-check">
    {{ form_widget(form.locked, {'attr': {'class': 'form-check-input'}}) }}
    {{ form_label(form.locked, '', {'label_attr': {'class': 'form-check-label'}}) }}
    {{ form_errors(form.locked) }}
</div>

<button class="btn btn-lg btn-primary float-right" id="addCategorie">{{ button_label|default('Ajouter') }}</button>
<div class="clearfix"></div>
{{ form_end(form) }}